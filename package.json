{
  "name": "event-track",
  "version": "0.1.4",
  "description": "Record any actions your system perform, along with any properties that describe the action.",
  "scripts": {
    "start": "babel-node bin/www.js",
    "clean": "rm -rf build && mkdir build",
    "build": "npm run clean && babel --presets es2015,stage-2 --plugins transform-runtime --ignore node_modules,test . -d build",
    "serve": "node --optimize_for_size --max_old_space_size=460 --gc_interval=100 build/bin/www.js",
    "test": " npm run lint && NODE_ENV=test ava",
    "lint": "standard --verbose | snazzy"
  },
  "author": "Rafael Jesus <rafaelljesus86@gmail.com> (http://github.com/rafaeljesus)",
  "license": "MIT",
  "pre-commit": [
    "test"
  ],
  "standard": {
    "parser": "babel-eslint"
  },
  "ava": {
    "files": [
      "test/*spec.js"
    ],
    "failFast": true,
    "require": [
      "babel-register",
      "babel-polyfill"
    ]
  },
  "dependencies": {
    "micro": "2.0.0",
    "mongoose": "4.4.6"
  },
  "devDependencies": {
    "ava": "^0.12.0",
    "babel-eslint": "^5.0.0",
    "babel-plugin-transform-runtime": "^6.6.0",
    "babel-polyfill": "^6.6.1",
    "babel-preset-es2015": "^6.6.0",
    "babel-preset-stage-1": "^6.5.0",
    "babel-preset-stage-2": "^6.5.0",
    "babel-runtime": "^6.6.1",
    "estraverse-fb": "^1.3.1",
    "pre-commit": "^1.1.2",
    "request-promise": "^2.0.1",
    "snazzy": "^3.0.0",
    "standard": "^6.0.7"
  },
  "engines": {
    "node": ">=0.12.0"
  }
}
